@model Laba_6.Models.Post

@{
    ViewData["Title"] = "Delete";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Topics" asp-action="Index">Topics</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-controller="Topics" asp-action="Details" asp-route-id="@Model.Topic.Id">@Model.Topic.Name</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-controller="Posts" asp-action="Details" asp-route-id="@Model.Id">@Model.Title</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Delete post</li>
    </ol>
</nav>

<hr />
<h3>Are you sure you want to delete this post?</h3>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
