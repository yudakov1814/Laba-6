@model Laba_6.Models.ImageFile

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this image?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            Image
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Path)
        </dt>
        <dd class = "col-sm-10">
            <div class="card" style="width: 18rem">
                <img class="card-img-top" src="@Model.Path" alt="image">
            </div>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Folders" asp-action="Details" asp-route-id="@Model.FolderId">Back to file system</a>
    </form>
</div>
